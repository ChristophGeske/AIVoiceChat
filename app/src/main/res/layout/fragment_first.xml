<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context=".FirstFragment">

    <ScrollView
        android:id="@+id/rootScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/rootColumn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Conversation log -->
            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="true"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/conversationLog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/conversation_log_hint"
                    android:textSize="16sp"
                    android:lineSpacingExtra="6dp"
                    android:textIsSelectable="true" />
            </ScrollView>

            <!-- API keys -->
            <LinearLayout
                android:id="@+id/apiKeysGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <EditText
                    android:id="@+id/geminiApiKeyInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/gemini_api_key_hint"
                    android:inputType="textPassword"
                    android:autofillHints="password"
                    android:importantForAutofill="yes" />

                <EditText
                    android:id="@+id/openaiApiKeyInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="@string/openai_api_key_hint"
                    android:inputType="textPassword"
                    android:autofillHints="password"
                    android:importantForAutofill="yes" />
            </LinearLayout>

            <!-- Models: 2 per row -->
            <LinearLayout
                android:id="@+id/modelsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioGeminiFlash"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="@string/gemini_flash" />

                    <RadioButton
                        android:id="@+id/radioGeminiPro"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="@string/gemini_pro" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <RadioButton
                        android:id="@+id/radioGpt5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/gpt5_high" />

                    <RadioButton
                        android:id="@+id/radioGpt5Mini"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="@string/gpt5_mini" />
                </LinearLayout>
            </LinearLayout>

            <!-- Controls row -->
            <LinearLayout
                android:id="@+id/controlsRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/newRecordingButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:text="@string/new_recording"
                    android:padding="12dp" />

                <View
                    android:layout_width="6dp"
                    android:layout_height="0dp" />

                <Button
                    android:id="@+id/stopButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/stop_conversation"
                    android:padding="12dp" />

                <View
                    android:layout_width="6dp"
                    android:layout_height="0dp" />

                <Button
                    android:id="@+id/askAgainButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:text="Ask again"
                    android:padding="12dp" />
            </LinearLayout>

            <!-- Speak button -->
            <Button
                android:id="@+id/speakButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/start_conversation"
                android:padding="16dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Center overlay progress -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>