<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101114"
    android:padding="12dp"
    tools:context=".feature.conversation.ui.ConversationFragment">

    <!-- Settings panel: full height, initially hidden; overlays content when visible -->
    <ScrollView
        android:id="@+id/settingsContainerScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        android:elevation="8dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="500dp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/settingsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A1C20"
            app:cardCornerRadius="12dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:paddingBottom="100dp">

                <!-- API keys -->
                <LinearLayout
                    android:id="@+id/apiKeysGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/gemini_api_key_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/geminiApiKeyInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Help link: only visible when Gemini key is empty -->
                    <TextView
                        android:id="@+id/geminiApiKeyHelpLink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:textColor="#64B5F6"
                        android:linksClickable="true"
                        android:visibility="gone"
                        tools:text="Get free Gemini API Key here" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="@string/openai_api_key_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/openaiApiKeyInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Models -->
                <LinearLayout
                    android:id="@+id/modelsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical">

                    <!-- Gemini row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioGeminiFlash"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/gemini_flash"
                            android:textColor="#FFFFFF" />

                        <RadioButton
                            android:id="@+id/radioGeminiPro"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:text="@string/gemini_pro"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                    <!-- GPT‑5 row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioGpt5High"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="GPT-5 (High)"
                            android:textColor="#FFFFFF" />

                        <RadioButton
                            android:id="@+id/radioGpt5Medium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:text="GPT-5 (Medium)"
                            android:textColor="#FFFFFF" />

                        <RadioButton
                            android:id="@+id/radioGpt5Low"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:text="GPT-5 (Low)"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                    <!-- GPT‑5 Mini row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioGpt5MiniHigh"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="GPT-5 Mini (High)"
                            android:textColor="#FFFFFF" />

                        <RadioButton
                            android:id="@+id/radioGpt5MiniMedium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:text="GPT-5 Mini (Medium)"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Max sentences per turn -->
                <LinearLayout
                    android:id="@+id/maxSentencesGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/maxSentencesLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/max_sentences_label"
                        android:textColor="#FFFFFF" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/max_sentences_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/maxSentencesInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:maxLength="2" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Listening time -->
                <LinearLayout
                    android:id="@+id/listenSecondsGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/listenSecondsLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Listening time (seconds)"
                        android:textColor="#FFFFFF" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="e.g., 3, 10, 30">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/listenSecondsInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:maxLength="3" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/listenSecondsDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Time the app listens after 'Tap to Speak' button was pressed and after the system finished speaking the complete answer."
                        android:textColor="#B0BEC5"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Faster First Response -->
                <LinearLayout
                    android:id="@+id/fasterFirstGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchFasterFirst"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/faster_first_label"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/fasterFirstDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Using this setting results in the first sentence being generated quickly, reducing initial response time. After the first sentence which arrives quickly, a short gap is to be expected, especially when using GPT-5 models or when setting the number of response sentences to a high number. This may result in slightly lower quality for complex queries."
                        android:textColor="#B0BEC5"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- START: SPEECH RECOGNITION BLOCK -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Speech Recognition Engine"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/ttsSettingsLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:padding="8dp"
                    android:text="Text-to-Speech (TTS) Settings"
                    android:textColor="#64B5F6"
                    android:textSize="14sp" />

                <RadioGroup
                    android:id="@+id/sttSystemRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <RadioButton
                        android:id="@+id/radioSttStandard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Standard (On-device)"
                        android:textColor="#FFFFFF" />

                    <RadioButton
                        android:id="@+id/radioSttGeminiLive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gemini Live (Fast, requires internet)"
                        android:textColor="#FFFFFF" />

                </RadioGroup>
                <!-- END: SPEECH RECOGNITION BLOCK -->

                <!-- System Prompt Section -->
                <LinearLayout
                    android:id="@+id/systemPromptGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/systemPromptTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Base System Prompt"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/systemPromptWarning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        android:text="⚠️ This prompt is used as context in both phases when 'Faster First Response' is enabled."
                        android:textColor="#FFA726"
                        android:textSize="12sp"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/system_prompt_label">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/systemPromptInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:hint="@string/system_prompt_hint"
                            android:inputType="textMultiLine"
                            android:minLines="3" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/resetSystemPromptButton"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="@string/reset_prompt" />

                    <!-- System Prompt Extensions (Editable) -->
                    <TextView
                        android:id="@+id/promptExtensionsTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="System Prompt Extensions"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/promptExtensionsDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        android:text="These instructions are automatically appended to your base prompt. You can customize them here."
                        android:textColor="#B0BEC5"
                        android:textSize="12sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/promptExtensionsLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Auto-generated instructions">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/promptExtensionsInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:minLines="3"
                            android:maxLines="8" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/resetPromptExtensionsButton"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="Reset Extensions" />

                    <!-- Phase 1 Prompt (Fast First Sentence) - visible when Faster First is ON -->
                    <TextView
                        android:id="@+id/phase1PromptTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Phase 1 Prompt (Fast First Sentence)"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="#FFFFFF"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/phase1PromptDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        android:text="This prompt is added as a user message to generate the first sentence quickly."
                        android:textColor="#B0BEC5"
                        android:textSize="12sp"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/phase1PromptLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Phase 1 instructions"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/phase1PromptInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:minLines="4"
                            android:maxLines="12" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/resetPhase1PromptButton"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="Reset Phase 1"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <!-- Phase 2 Prompt (Detailed Continuation) - visible when Faster First is ON -->
                    <TextView
                        android:id="@+id/phase2PromptTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Phase 2 Prompt (Detailed Continuation)"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="#FFFFFF"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/phase2PromptDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        android:text="This prompt is added as a user message to generate the remaining sentences with full detail. Use {FIRST_SENTENCE}, {REMAINING_COUNT}, and {PLURAL} as placeholders."
                        android:textColor="#B0BEC5"
                        android:textSize="12sp"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/phase2PromptLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Phase 2 instructions"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/phase2PromptInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:minLines="6"
                            android:maxLines="16" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/resetPhase2PromptButton"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="Reset Phase 2"
                        android:visibility="gone"
                        tools:visibility="visible" />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </ScrollView>

    <!-- Main content (hidden while settings are visible) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/conversationRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:contentDescription="@string/conversation_history_description"
        android:paddingBottom="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/item_conversation_entry" />

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/controlsRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/newRecordingButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="12dp"
                android:text="@string/new_recording"
                android:textAllCaps="false"
                android:visibility="gone" />

            <View
                android:layout_width="6dp"
                android:layout_height="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/stopButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="12dp"
                android:text="@string/stop_conversation"
                android:textAllCaps="false" />

            <View
                android:layout_width="6dp"
                android:layout_height="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/clearButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="12dp"
                android:text="@string/clear_conversation"
                android:textAllCaps="false" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/speakButton"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/start_conversation"
            android:textAllCaps="false" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
