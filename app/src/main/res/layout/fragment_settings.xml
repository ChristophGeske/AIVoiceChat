<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingsScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101114"
    android:fillViewport="true"
    android:padding="12dp"
    tools:context=".feature.settings.ui.SettingsFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/settingsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#1A1C20"
        app:cardCornerRadius="12dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/settingsRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp"
            android:paddingBottom="100dp">

            <!-- API keys -->
            <LinearLayout
                android:id="@+id/apiKeysGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/gemini_api_key_hint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/geminiApiKeyInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/geminiApiKeyHelpLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:linksClickable="true"
                    android:textColor="#64B5F6"
                    android:visibility="gone"
                    tools:text="Get free Gemini API Key here" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="@string/openai_api_key_hint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/openaiApiKeyInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Models -->
            <LinearLayout
                android:id="@+id/modelsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <!-- Gemini row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioGeminiFlash"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/gemini_flash"
                        android:textColor="#FFFFFF" />

                    <RadioButton
                        android:id="@+id/radioGeminiPro"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="@string/gemini_pro"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <!-- GPT‑5 row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioGpt5High"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="GPT-5 (High)"
                        android:textColor="#FFFFFF" />

                    <RadioButton
                        android:id="@+id/radioGpt5Medium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="GPT-5 (Medium)"
                        android:textColor="#FFFFFF" />

                    <RadioButton
                        android:id="@+id/radioGpt5Low"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="GPT-5 (Low)"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <!-- GPT‑5 Mini row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioGpt5MiniHigh"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="GPT-5 Mini (High)"
                        android:textColor="#FFFFFF" />

                    <RadioButton
                        android:id="@+id/radioGpt5MiniMedium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="GPT-5 Mini (Medium)"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>

            <!-- Max sentences -->
            <LinearLayout
                android:id="@+id/maxSentencesGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/maxSentencesLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/max_sentences_label"
                    android:textColor="#FFFFFF" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/max_sentences_hint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/maxSentencesInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="2" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Listening time -->
            <LinearLayout
                android:id="@+id/listenSecondsGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/listenSecondsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Listening time (seconds)"
                    android:textColor="#FFFFFF" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="e.g., 3, 10, 30">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/listenSecondsInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="3" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/listenSecondsDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Controls: (1) How long to listen after pressing 'Tap to Speak', and (2) Delay before auto-listening after assistant finishes speaking (if auto-listen is enabled)."
                    android:textColor="#B0BEC5"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- AUTO-LISTEN TOGGLE -->
            <LinearLayout
                android:id="@+id/autoListenGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchAutoListen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Auto-listen after response"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/autoListenDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Automatically start listening again after the assistant finishes speaking. The delay is controlled by 'Listening time' setting above."
                    android:textColor="#B0BEC5"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Faster First -->
            <LinearLayout
                android:id="@+id/fasterFirstGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchFasterFirst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/faster_first_label"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/fasterFirstDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/faster_first_desc"
                    android:textColor="#B0BEC5"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- STT system -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Speech Recognition Engine"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/ttsSettingsLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:padding="8dp"
                android:text="Text-to-Speech (TTS) Settings"
                android:textColor="#64B5F6"
                android:textSize="14sp" />

            <RadioGroup
                android:id="@+id/sttSystemRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/radioSttStandard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Standard (On-device)"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/radioSttGeminiLive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gemini Live (Fast, requires internet)"
                    android:textColor="#FFFFFF" />
            </RadioGroup>

            <!-- System Prompt -->
            <LinearLayout
                android:id="@+id/systemPromptGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/systemPromptTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Base System Prompt"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/systemPromptWarning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:text="⚠️ This prompt is used as context in both phases when 'Faster First Response' is enabled."
                    android:textColor="#FFA726"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/system_prompt_label">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/systemPromptInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:hint="@string/system_prompt_hint"
                        android:inputType="textMultiLine"
                        android:minLines="3" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/resetSystemPromptButton"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/reset_prompt" />

                <!-- Prompt Extensions -->
                <TextView
                    android:id="@+id/promptExtensionsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="System Prompt Extensions"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/promptExtensionsDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:text="These instructions are automatically appended to your base prompt. You can customize them here."
                    android:textColor="#B0BEC5"
                    android:textSize="12sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/promptExtensionsLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Auto-generated instructions">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/promptExtensionsInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:inputType="textMultiLine"
                        android:minLines="3"
                        android:maxLines="8" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/resetPromptExtensionsButton"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Reset Extensions" />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</ScrollView>